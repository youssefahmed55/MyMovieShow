<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageofmovie_list3"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_105sdp"
            android:src="@drawable/joker"
            android:scaleType="fitXY"
            ></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/nameofmovie_list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="sans-serif"
                android:text="Joker"
                android:textSize="@dimen/_15ssp"></TextView>
            <TextView
                android:id="@+id/Detailsofmovie_list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-Action-2h-25m"
                android:fontFamily="sans-serif-black"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp"
                >
                <TextView
                    android:id="@+id/Rating_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating :"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_gravity="center"
                    ></TextView>
                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/star"
                    ></ImageView>
                <TextView
                    android:id="@+id/rateofmovie_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.3"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>